@page
@model mystore.Pages.Clients.EditModel
@{
    <br />
    <h2>Edit Client</h2>

    @if (Model.errorMessage.Length > 0)
    {

        <div class='alert alert-warning alert-heading fade show' role="alert">
            <strong>
                @Model.errorMessage
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </strong>


        </div>

    }

<form method="Post" asp-page-handler="Edit" asp-route-id="@Model.clientInfo.id">
    <input type="hidden" name="id" value="@Model.clientInfo.id">

    <table class="table table-responsive-md w-100 table-striped table-bordered" cellspacing="0" cellpadding="4" rules="all" border="1" style="border-collapse:collapse;">
        <tbody>
            <tr class="thead-primary text-dark text-center Email">
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
            </tr>
            <tr>
                <td>
                    <input type="text" class="form-control" name="name" value="@Model.clientInfo.name">
                </td>
                <td>
                    <input type="text" class="form-control" name="email" value="@Model.clientInfo.email">
                </td>
                <td>
                    <input type="text" class="form-control" name="phone" value="@Model.clientInfo.phone">
                </td>
                <td>
                    <input type="text" class="form-control" name="address" value="@Model.clientInfo.address">
                </td>
               
            </tr>
        </tbody>
    </table>







    @if (Model.successMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.successMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-2 d-grid">
            <button type="button" class="btn btn-outline-primary" onclick="window.location.reload()">Refresh</button>
            <script>
                function reloadPageNTimes(n) {
                    for (let i = 0; i < n; i++) {
                        window.location.reload();
                    }
                }
            </script>

        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>

</form>
}

